    <!-- EmailJS SDK -->
    <script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>
    <script>
        // WhatsApp QR
        const phone = '918767080061';
        const preset = `Hi Kavindra here%0APF+बद्दल+माहिती+आहे%3F`;
        const waLink = `https://wa.me/${phone}?text=${preset}`;
        document.getElementById('waBtn').href = waLink;
        document.getElementById('qrImg').src = `https://api.qrserver.com/v1/create-qr-code/?size=220x220&data=${encodeURIComponent(waLink)}`;

        // Initialize EmailJS
        emailjs.init("Nz0pGy1VmTmLTCVgN"); // Your Public Key

        const form = document.getElementById('contactForm');
        const statusMsg = document.getElementById('statusMsg');

        form.addEventListener('submit', function (e) {
            e.preventDefault();

            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const service = document.getElementById('service').value;
            const message = document.getElementById('message').value;

            emailjs.send('service_jy4f3q4', 'template_4ejw19q', {
                name: name,
                phone: phone,
                service: service,
                message: message
            })
                .then(function (response) {
                    statusMsg.style.color = 'green';
                    statusMsg.innerText = 'Your message was sent successfully!';
                    form.reset();
                }, function (error) {
                    statusMsg.style.color = 'red';
                    statusMsg.innerText = 'Failed to send message. Please try again.';
                    console.error('EmailJS Error:', error);
                });
        });
    </script>

